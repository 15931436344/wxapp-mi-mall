                    <image src="https://i8.mifile.cn/b2c-mimall-media/06cabb01bbe4ac5c819ee101e4446a16!120x120.png"/>
                    <text>小米MIX2S</text>
                </view>
                <view class="cate-item">
                    <image src="https://i8.mifile.cn/b2c-mimall-media/06cabb01bbe4ac5c819ee101e4446a16!120x120.png"/>
                    <text>小米MIX2S</text>
                </view>
                <view class="cate-item">
                    <image src="https://i8.mifile.cn/b2c-mimall-media/06cabb01bbe4ac5c819ee101e4446a16!120x120.png"/>
                    <text>小米MIX2S</text>
                </view>
                <view class="cate-item">
                        <image src="https://i8.mifile.cn/b2c-mimall-media/06cabb01bbe4ac5c819ee101e4446a16!120x120.png"/>
                        <text>小米MIX2S</text>
                    </view>
            </view>
        </view>
    </scroll-view>
</view>
